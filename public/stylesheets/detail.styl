	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background none repeat scroll 0% 0% rgba(0, 0, 0, 0.3)
	z-index 10000

#detailContainer
	top 10%
	width 800px
	height 80%
	padding 15px
	margin-left 280px
	position fixed
	background #fff
	box-shadow 0px 2px 10px 2px rgba(0, 0, 0, 0.2)
